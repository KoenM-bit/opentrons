{
  "$id": "opentronsCommandAnnotationSchemaV1",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$defs": {
    "baseAnnotation": {
      "description": "Things all annotations have",
      "type": "object",
      "required": [
        "name",
        "type",
        "commandKeys"
        ],
      "properties": {
        "name": {
          "description": "A user-readable name of the instance of annotation",
          "type": "string"
        },
        "commandKeys": {
          "type": "array",
          "items": {
            "description": "Command keys to which this annotation applies",
            "type": "string"
          }
        },
        "type": {
          "description": "The type of annotation (for machine parsing)",
          "type": "string"
        }
      },
      "annotationKind1": {
        "description": "A cool annotation",
        "allOf": [ {"$ref": "#/$defs/baseAnnotation"} ],
        "type": "object",
        "required": ["name", "type", "commandKeys", "iceCreamFlavor"],
        "properties": {
          "type": {
            "type": "string",
            "enum": ["coolAnnotation"]
          },
          "iceCreamFlavor": {
            "description": "Whatever you like!",
            "type": "string"
          }
        }
      },
      "annotationKind2": {
        "description": "A hot annotation",
        "allOf": [{"$ref": "#/$defs/baseAnnotation"}],
        "type": "object",
        "required": ["name", "type", "commandKeys", "brothBase"],
        "properties": {
          "type": {
            "type": "string",
            "enum": ["hotAnnotation"]
          },
          "brothBase": {
            "description": "Whatever you like as long as it is broth",
            "type": "string"
          }
        }
      }
    }
  },
  "oneOf": [
    {"$ref": "#/$defs/annotationKind1"},
    {"$ref": "#/$defs/annotationKind2"}
  ]
}
